<div id="container" align="center">
<% if current_user %>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Start Playing!</div>
  <div class="panel-body">

    <div class="image-container">
      <%= image_tag 'back_of_cards/b2fv.png', class:  "pure-img-responsive-1" %>
      <%= image_tag 'back_of_cards/joker.png', class:  "pure-img-responsive-2"%>
    </div>

    <div class="form">
    <%= form_for @room do |f| %>
      Game Room: <%= f.text_field :name %>
      <%= f.submit %>
    <% end %>
    </div>

</div>
<% else %>
  <%= controller.redirect_to login_path %>
<% end %>
</div>

<style>
.panel-default {
  padding-top: 20px;
  margin-top: 20px;
  margin: 0 auto;
  width: 800px;
}
.panel-heading{
  text-align: center;
}

.image-container{
    text-align: center;
}

.form
</style>
