<div id="container" align="center">
<% if current_user %>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">High Scores</div>
  <div class="panel-body">

    <div class="image-container">
      <%= image_tag 'back_of_cards/b2fv.png', class:  "pure-img-responsive-1" %>
      <%= image_tag 'back_of_cards/joker.png', class:  "pure-img-responsive-2"%>
    </div>

    <div class="panel-heading">Join a Game!</div>

  </div>
   <table class="table">
     <thead>
       <tr>
         <th>Room</th>
         <th colspan="3"></th>
       </tr>
     </thead>
     <tbody>
         <tr>
           <% @rooms.each do |room| %>
              <% if room.users.length < 4 && room.users.length > 0 %>
                <td><%= link_to "#{room.name}", room_path(room.id) %></td>
              <% end %>
           <% end %>
         </tr>
     </tbody>
   </table>
   <div>
     <%= link_to "Or make one!", new_room_path %>
   </div>
</div>
<% else %>
  <%= controller.redirect_to login_path %>
<% end %>
</div>

<style>
.panel-default {
  padding-top: 20px;
  margin-top: 20px;
  margin: 0 auto;
  width: 800px;
}
.panel-heading{
  text-align: center;
}

.image-container{
    text-align: center;
}
</style>
